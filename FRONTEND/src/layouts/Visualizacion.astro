---
import Navbar from "../Componentes/Navbar.astro";
import Footer from "../Componentes/Footer.svelte";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/sportify-favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body class="flex flex-col overflow-x-hidden bg-light-background dark:bg-dark-background text-light-text dark:text-dark-text">
		<Navbar/>
        <slot />
		<Footer/>

	</body>
</html>