---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/sportify-favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <div class="bg-black w-full h-full">
            <img src="/voleibol-piso-deportista.png" class="absolute w-full h-full -z-10 opacity-80">
        </div>
        <slot />
	</body>
</html>